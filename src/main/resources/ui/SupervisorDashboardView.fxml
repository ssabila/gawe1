<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane" maxHeight="768.0" maxWidth="1366.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="768.0" prefWidth="1366.0" stylesheets="@dashboard.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.SupervisorDashboardController">
    <left>
        <VBox styleClass="sidebar" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER" styleClass="sidebar-header">
                    <children>
                        <Label styleClass="sidebar-title" text="GAWE" />
                        <Label styleClass="sidebar-subtitle" text="Employee Management System" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </VBox>
                <VBox fx:id="navButtonContainer" spacing="5.0" styleClass="navigation-sidebar">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
                <VBox VBox.vgrow="ALWAYS" />
                <Button mnemonicParsing="false" onAction="#handleLogout" styleClass="logout-button" text="Logout">
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </left>
    <top>
        <HBox alignment="CENTER_LEFT" styleClass="header-box" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="userWelcomeLabel" styleClass="user-welcome-label" text="Welcome, [Supervisor Name]">
                    <font>
                        <Font name="Poppins Regular" size="16.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background-insets: 0;">
            <content>
                <StackPane fx:id="contentArea" styleClass="content-area" />
            </content>
        </ScrollPane>
    </center>
</BorderPane>