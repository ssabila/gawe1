<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.Region?>
<BorderPane fx:id="rootPane" stylesheets="@dashboard.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.ManagerDashboardController">
    <left>
        <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" styleClass="navigation-scroll">
            <content>
                <VBox styleClass="sidebar">
                    <children>
                        <!-- User Greeting Section -->
                        <VBox alignment="CENTER" styleClass="user-info-section">
                            <children>
                                <Label styleClass="user-avatar" text="ðŸ‘”" />
                                <Label fx:id="navUserGreeting" styleClass="user-greeting" text="Hello, Manager!" />
                                <Label styleClass="user-role" text="Manager Dashboard" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </VBox.margin>
                        </VBox>

                        <!-- Navigation Buttons -->
                        <VBox fx:id="navButtonContainer" spacing="8.0" styleClass="nav-buttons-container">
                            <padding>
                                <Insets top="12.0" />
                            </padding>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </left>

    <top>
        <HBox alignment="CENTER_LEFT" styleClass="header-box">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="12.0">
                    <children>
                        <Label styleClass="gawe-logo" text="gawe" />
                    </children>
                </HBox>
                <Region HBox.hgrow="ALWAYS" />
                <!-- Center - Welcome message -->
                <Label fx:id="userWelcomeLabel" styleClass="user-welcome-label" text="Welcome, [Manager Name]" HBox.hgrow="ALWAYS">
                    <font>
                        <Font name="Poppins Regular" size="16.0" />
                    </font>
                </Label>
                <!-- Right side - Logo -->
                <Button onAction="#handleLogout" styleClass="logout-button" text="ðŸšª Logout">
                    <HBox.margin>
                        <Insets left="20.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED" styleClass="content-scroll">
            <content>
                <StackPane fx:id="contentArea" styleClass="content-area" minHeight="500.0" />
            </content>
        </ScrollPane>
    </center>
</BorderPane>
