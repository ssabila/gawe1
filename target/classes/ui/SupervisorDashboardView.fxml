<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane" stylesheets="@dashboard.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.SupervisorDashboardController">
    <top>
        <HBox alignment="CENTER_LEFT" styleClass="header-box">
            <padding>
                <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
            </padding>
            <children>
                <Label styleClass="header-title" text="GAWE - Supervisor Dashboard" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="userWelcomeLabel" styleClass="user-welcome-label" />
                <Button onAction="#handleLogout" styleClass="logout-button" text="Logout">
                    <HBox.margin>
                        <Insets left="20.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </top>
    <left>
        <VBox styleClass="navigation-sidebar">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label styleClass="nav-title" text="Navigation" />
                <Separator styleClass="nav-separator" />
                <VBox fx:id="navButtonContainer" spacing="5.0" />
            </children>
        </VBox>
    </left>
    <center>
        <StackPane fx:id="contentArea" styleClass="content-area">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
            </padding>
        </StackPane>
    </center>
</BorderPane>